{
  "name": "bathe",
  "version": "0.5.4",
  "description": "WordPress starter theme including full setup for gulp, Webpack, Sass, Autoprefixer, Bourbon/Neat/Bitters, imagemin, Browsersync, PostCSS etc.",
  "main": "gulpfile.js",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR"
  ],
  "config": {
    "image": {
      "src": "assets/_images",
      "dist": "assets/images"
    },
    "js": {
      "src": "assets/_js",
      "dist": "assets/js"
    },
    "sass": {
      "src": "assets/_sass",
      "dist": "assets/css",
      "style": "compressed"
    }
  },
  "scripts": {
    "start": "npm-run-all build -p browser watch",
    "browser": "browser-sync start --config bs-config.js",
    "build": "run-p imagemin sass webpack",
    "imagemin": "node imagemin \"$npm_package_config_image_src/**/*\" $npm_package_config_image_dist",
    "presass": "stylelint \"$npm_package_config_sass_src/**/*\" --fix",
    "sass": "sass $npm_package_config_sass_src:$npm_package_config_sass_dist --style=compressed --no-source-map",
    "postsass": "postcss $npm_package_config_sass_dist/*.css --use=autoprefixer --no-map --dir=$npm_package_config_sass_dist",
    "webpack": "webpack",
    "watch:imagemin": "onchange \"$npm_package_config_image_src/**/*\" -e \".DS_Store\" -- npm run imagemin",
    "watch:sass": "onchange \"$npm_package_config_sass_src/**/*\" -e \".DS_Store\" -- npm run sass",
    "watch:webpack": "npm run webpack -- --watch",
    "watch": "run-p watch:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wp-bathe/bathe.git"
  },
  "keywords": [
    "WordPress",
    "Browsersync",
    "Sass",
    "PostCSS",
    "Autoprefixer",
    "imagemin",
    "Webpack",
    "stylelint",
    "ESLint"
  ],
  "author": "Kite",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/wp-bathe/bathe/issues"
  },
  "homepage": "https://github.com/wp-bathe/bathe",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@ixkaito/imagemin": "^0.1.0",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.7",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-loader": "^3.0.3",
    "globby": "^11.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-optipng": "^7.1.0",
    "imagemin-svgo": "^7.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "postcss-loader": "^3.0.0",
    "sass": "^1.26.2",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "stylelint": "^13.2.0",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  }
}
