{
  "siteurl": "wordpress.dev",

  "tasks": {
    "compass":      true,
    "browserify":   true,
    "imagemin":     true,
    "browser-sync": true,
    "watch":        true
  },

  "paths": {
    "assets":    "./assets",
    "css":       "./assets/css",
    "sass":      "./assets/_sass",
    "js":        "./assets/js",
    "jsSrc":     "./assets/_js",
    "images":    "./assets/images",
    "imagesSrc": "./assets/_images"
  },

  "compass": {
    "config":   "./config.rb",
    "style":    "compressed",
    "comments": false
  },

  "js": {
    "src": [
      "./assets/_js/main.js"
    ],
    "dist": "main.js"
  }
}
