{
  "siteurl": "wordpress.dev",

  "tasks": {
    "compass":      true,
    "browserify":   true,
    "imagemin":     true,
    "browser-sync": true,
    "watch":        true
  },

  "paths": {
    "assets":    "./assets",
    "css":       "css",
    "js":        "js",
    "images":    "images",
    "sass":      "_sass",
    "jsSrc":     "_js",
    "imagesSrc": "_images"
  },

  "compass": {
    "config":   "./config.rb",
    "style":    "compressed",
    "comments": false
  },

  "js": {
    "dist": "main.js"
  }
}
